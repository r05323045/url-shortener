<div class="container py-5">
  <h1 class="text-center my-5">URL Shortener</h1>
  <div class="row">
    <div class="col-12 col-sm-8 col-md-6 col-xl-4 mx-auto">
      <div class="col-6 mx-auto mb-5">
        <img class="img-link" src="https://www.flaticon.com/svg/static/icons/svg/791/791757.svg">
      </div>
      <div>
        <h5>Success! Please use this link:</h5>
        <div class="input-group my-3">
          <input type="text" class="form-control output-url" value="{{output_url}}">
          <div class="input-group-append">
            <span class="input-group-text btn btn-secondary" onclick="copyUrl()"><i class="fas fa-copy"></i></span>
          </div>
        </div>
        <div class="w-100 my-5 text-center">
          <a href="/">
            <div class="btn btn-outline-primary">
              Back
            </div>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
<script>
  function copyUrl() {
    const outputUrl  = document.querySelector('.output-url')
    outputUrl.select()
    document.execCommand('copy')
  }
</script>